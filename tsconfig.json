{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*" : ["*"],
      "@app": ["app"],
      "@features": ["features"],
      "@screens": ["screens"],
      "@shared/*": ["shared/*"],
    }
  },
  "include": [
    "src/**/*.ts","src/**/*.json", ".env"
  ],
  "exclude": ["node_modules"]
}
